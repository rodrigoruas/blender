css:
  :root {
  --close_circle_width: #{type.close_circle_width};
  --close_cross_width: #{type.close_cross_width};
  --close_cross_thickness: #{type.close_cross_thickness};
  }
  #modal_new {
    border-radius: #{type.modal_radius}
  }

  #header_new {
    background-color: grey;
    height: #{type.header_height};
  }

  #title_new {
    margin-top: #{type.title_margin_top};
    font-family: #{type.title_font_family};
    font-size: #{type.title_font_size};
    font-color: #{type.title_font_color};
    line-height: #{type.title_line_height};
    text-align: #{type.title_text_align};
  }

  #content_new {
    margin-top: #{type.content_margin_top};
    font-family: #{type.content_font_family};
    font-size: #{type.content_font_size};
    font-color: #{type.content_font_color};
    line-height: #{type.content_line_height};
    text-align: #{type.content_text_align};
    margin-bottom: #{type.content_margin_bottom};
  }

  #bottom_new {
    height: calc(100% - #{type.header_height});
    padding-top: #{type.bottom_padding_top};
    padding-right: #{type.bottom_padding_right};
    padding-bottom: #{type.bottom_padding_bottom};
    padding-left: #{type.bottom_padding_left};
    background-color: #{type.bottom_background_color}; 
  }

  #button_new {
    font-family: #{type.button_font_family};
    font-size: #{type.button_font_size};
    font-color: #{type.button_font_color};
    letter-spacing: #{type.button_letter_spacing};
  }

